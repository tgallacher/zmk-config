/* Global Settings */
#define QUICK_TAP_MS 175

&lt {  // layer-tap config
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <QUICK_TAP_MS>;
};

/* Custom key press behaviors */

// homerow mods
ZMK_BEHAVIOR(hrm, hold_tap,
    flavor = "balanced";
    tapping-term-ms = <280>;
    quick-tap-ms = <125>;
    bindings = <&kp>, <&kp>;
)

/*
 *
 * Note: OS keyboard input must be set to "British PC" and the keyboard type must be ISO
 * Note: This will swap the keycodes `AT` and `DQT`
 */
#define BASE   0
#define SYMBL  1
#define NUMFN  2
#define HRDWR  3
#define NAV    4

&led_strip {
  chain-length = <12>;
};

&kscan {
  debounce-press-ms = <1>;
  debounce-release-ms = <5>;
};

